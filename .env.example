# Meta Ads API Configuration
# User Access Token - for ad account and campaigns access
META_USER_ACCESS_TOKEN=your_meta_user_access_token_here
# Page Access Token - for lead forms and leads retrieval
META_PAGE_ACCESS_TOKEN=your_meta_page_access_token_here
# Ad Account ID (format: act_XXXXX)
META_AD_ACCOUNT_ID=act_your_account_id_here
# Facebook Page ID (where lead forms are hosted)
FACEBOOK_PAGE_ID=your_facebook_page_id_here

# AlfaCRM Configuration
ALFACRM_BASE_URL=https://your_domain.alfacrm.com
ALFACRM_EMAIL=your_alfacrm_email
ALFACRM_API_KEY=your_alfacrm_api_key_here
ALFACRM_COMPANY_ID=1

# NetHunt CRM Configuration
# Basic Auth format: base64(email:api_key)
NETHUNT_BASIC_AUTH=your_nethunt_basic_auth_here

# Google Sheets Configuration (optional)
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_APPLICATION_CREDENTIALS=path_to_credentials_json

# CRM Provider Selection
CRM_PROVIDER_TEACHERS=nethunt
CRM_PROVIDER_STUDENTS=alfacrm

# Storage Backend Configuration
STORAGE_BACKEND=excel
EXCEL_CREATIVES_PATH=path_to_creatives_excel
EXCEL_STUDENTS_PATH=path_to_students_excel
EXCEL_TEACHERS_PATH=path_to_teachers_excel

# Campaign Keywords for Classification
CAMPAIGN_KEYWORDS_TEACHERS=prepod,Teacher,Vchitel
CAMPAIGN_KEYWORDS_STUDENTS=Student,Shkolnik

# Security Configuration
API_KEY=your_api_key_for_auth_here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://your-railway-app.railway.app,https://your-domain.com

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=your-railway-app.railway.app,your-domain.com
