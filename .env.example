# ========================================
# eCademy Configuration File
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# ========================================
# Security Configuration
# ========================================
# API Keys for authentication (comma-separated, no spaces)
# Generate secure keys with: python -c "import secrets; print(secrets.token_hex(32))"
# Leave empty for development mode (no authentication required)
# Production: MUST set at least one API key for security
API_KEYS=

# CORS allowed origins (comma-separated, no spaces)
# Production: Replace with your actual frontend domain
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000

# Trusted hosts for Host header validation (comma-separated)
# Production: Add your domain(s)
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# Meta (Facebook) Marketing API
# ========================================
# Get your access token from: https://developers.facebook.com/tools/explorer/
# Permissions needed: ads_read, leads_retrieval
META_ACCESS_TOKEN=
# Ad account ID format: act_1234567890
# Find it in: https://business.facebook.com/settings/ad-accounts/
META_AD_ACCOUNT_ID=act_1234567890

# ========================================
# Google Sheets Integration (optional)
# ========================================
# Path to Google Service Account JSON key file
# How to create: https://cloud.google.com/iam/docs/service-accounts-create
# Example: D:\\Automation\\creds\\google-sa.json
GOOGLE_APPLICATION_CREDENTIALS=

# Target Google Sheet ID (can also be entered via UI)
# Format: 1a2b3c4d5e6f7g8h9i0j1k2l3m4n5o6p7q8r9s0t
# Get it from the sheet URL: https://docs.google.com/spreadsheets/d/SHEET_ID/edit
GOOGLE_SHEET_ID=

# ========================================
# CRM Integrations
# ========================================
# CRM_PROVIDER options: none | amocrm | bitrix24 | hubspot | pipedrive | nethunt | alfacrm
# Currently supported in code: nethunt (teachers), alfacrm (students)
CRM_PROVIDER=none

# --- amoCRM (not actively used) ---
AMO_BASE_URL=
AMO_ACCESS_TOKEN=

# --- Bitrix24 (not actively used) ---
BITRIX_BASE_URL=
BITRIX_WEBHOOK_TOKEN=

# --- HubSpot (not actively used) ---
HUBSPOT_ACCESS_TOKEN=

# --- Pipedrive (not actively used) ---
PIPEDRIVE_API_TOKEN=

# --- NetHunt CRM (for teachers) ---
# Authorization format: "Basic base64(email:api_key)"
# Get API key from NetHunt settings
NETHUNT_BASIC_AUTH=
# Folder ID where teachers are stored
# Find in NetHunt folder URL or via API
NETHUNT_FOLDER_ID=

# --- AlfaCRM (for students) ---
# Base URL format: https://{subdomain}.alfacrm.pro
ALFACRM_BASE_URL=
# Your AlfaCRM account email
ALFACRM_EMAIL=
# API key from AlfaCRM settings -> Integrations -> API
ALFACRM_API_KEY=
# Company ID (numeric)
ALFACRM_COMPANY_ID=

# ========================================
# Storage Backend Configuration
# ========================================
# Options: 'sheets' (Google Sheets) or 'excel' (local .xlsx files)
STORAGE_BACKEND=sheets

# --- Excel Storage Paths (if STORAGE_BACKEND=excel) ---
# Absolute paths to Excel files for each dataset
EXCEL_CREATIVES_PATH=
EXCEL_STUDENTS_PATH=
EXCEL_TEACHERS_PATH=

